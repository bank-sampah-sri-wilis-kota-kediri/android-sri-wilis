<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_appbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/yellow_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_order"
            android:textSize="25sp"
            android:fontFamily="@font/inter_extra_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="25dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/cl_appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_status_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tv_status_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_order_status_process"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/inter_extra_bold"
                android:padding="3dp"
                android:layout_marginHorizontal="35dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_status_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tv_status_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_order_status_process"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/inter_extra_bold"
                android:padding="3dp"
                android:layout_marginHorizontal="35dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile"
            android:layout_width="380dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/cv_status_process"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_profile"/>

            <TextView
                android:id="@+id/tv_settings_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_settings_subtitle1"
                android:fontFamily="@font/inter_extra_bold"
                android:layout_gravity="center|start"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_settings_subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_settings_subtitle1_desc"
                android:fontFamily="@font/inter_regular"
                android:layout_gravity="center|start"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/ic_arrow_next_settings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_settings"
                android:layout_marginEnd="12dp"
                android:layout_gravity="end|center"/>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>